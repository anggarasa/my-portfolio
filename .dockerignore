# ==============================================================================
# Docker Ignore File for Laravel Production Build
# ==============================================================================

# Version Control
.git
.gitignore
.gitattributes
.github

# Environment Files (will be provided at runtime)
.env
.env.*
!.env.example

# Dependencies (will be installed during build)
node_modules
vendor

# Development/Testing
tests
phpunit.xml
.phpunit.result.cache
.phpunit.cache
codeception.yml

# IDE/Editor files
.idea
.vscode
*.swp
*.swo
*~

# OS Files
.DS_Store
Thumbs.db

# Documentation
*.md
!README.md
docs
documentation

# Build caches and logs
storage/logs/*
!storage/logs/.gitignore
storage/framework/cache/*
!storage/framework/cache/.gitignore
storage/framework/sessions/*
!storage/framework/sessions/.gitignore
storage/framework/views/*
!storage/framework/views/.gitignore
storage/framework/testing/*
!storage/framework/testing/.gitignore
storage/app/*
!storage/app/.gitignore
!storage/app/public
storage/app/public/*
!storage/app/public/.gitignore
bootstrap/cache/*
!bootstrap/cache/.gitignore

# Debug and profiling
storage/debugbar
.phpstorm.meta.php
_ide_helper*.php

# Configuration files for development tools
.editorconfig
.prettierrc
.prettierignore
.eslintrc*
eslint.config.js
prettier.config.*
stylelint.config.*
tsconfig.json
tailwind.config.*
postcss.config.*

# Docker files (we don't need docker folder inside the image)
# Uncomment if you want to exclude docker configs from the image:
# docker-compose*.yml

# Temporary files
*.log
*.tmp
*.temp
*.cache

# NPM debug logs
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# PHPUnit and Pest
.phpunit*

# Laravel Telescope
storage/telescope

# Laravel Horizon
storage/horizon

# Compiled assets will be copied from builder stage
public/build
public/hot
public/storage

# Mix manifest (Vite uses different approach)
public/mix-manifest.json
